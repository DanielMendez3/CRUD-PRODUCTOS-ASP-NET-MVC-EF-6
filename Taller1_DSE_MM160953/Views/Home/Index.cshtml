
@{
    ViewBag.Title = "Index";
}

<div class=" container">
    <h2>Inicio</h2>
    <div class="row">
        <div class="col-md-6 scene">
            @Html.ActionLink("Productos", "Index", "Products", null, new { @class = "card__face--front card card__face" })
        </div>
        <div class="col-md-6 scene">
            @Html.ActionLink("Categorias", "Index", "Categories", null, new { @class = "card__face--front card card__face" })
        </div>
    </div>
</div>



<style>
    .scene {
        width: 300px;
        height: 300px;
        margin: 40px 20px;
        perspective: 600px;
    }

    .card {
        width: 100%;
        height: 100%;
        transition: transform 1s;
        transform-style: preserve-3d;
        cursor: pointer;
        position: relative;
    }

    .card__face {
        position: absolute;
        width: 100%;
        height: 100%;
        line-height: 260px;
        color: white;
        text-align: center;
        font-weight: bold;
        font-size: 40px;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

    .card__face--front {
        background-color: seagreen;
    }
</style>


